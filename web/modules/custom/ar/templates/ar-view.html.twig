{# ** @file modules/custom/ar/templates/ar.html.twig
 *
 * Default theme implementation to present ar data.
 *
 * Available variables:
 * - content: A list of content items. Use 'content' to print all content, or
 *          content.field_name to access public fields
 * - attributes: HTML attributes for the container element.
 *
 * @see ar_preprocess_ar_template()
 *
 * @ingroup themeable
 */
#}

<div class="reviews" {{ attributes.addClass('guestbook') }}>
  <div class="top-wrapper">

    {# user data #}
    <div class="user-data-wrapper">
      <div class="user-data">
        <div class="avatar-user">
          {{ content.avatar_user }}
        </div>
        <div class="name-user">
          {{ content.name_user }}
        </div>
        <div class="date-created">
          {{ content.created }}
        </div>
      </div>
    </div>

    {# user message #}
    <div class="user-message">
      {% if content.image_user is not null %}
        <div class="picture"> {{ content.image_user }} </div>
      {% endif %}
      <div class="message-user">
        {{ content.message_user }}
      </div>
    </div>
  </div>


  {# User contacts #}
  <div class="contact-wrapper">
    <div class="phone"> {{ content.phone_user }}</div>
    <div class="email">{{ content.email_user }}</div>
  </div>

  {# admin buttons #}
  <div class="admin-buttons">
    {% if user.hasPermission('administer nodes') %}
      <div class="manage">
        {{ button }}
      </div>
    {% endif %}
  </div>

</div>
